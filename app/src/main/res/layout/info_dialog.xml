<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@android:color/transparent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical" android:layout_width="match_parent"
        android:background="@color/white_color"
        android:id="@+id/ll_top"
        android:layout_height="320dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
    <RelativeLayout
        android:id="@+id/rl_icons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/img_close_info"
            android:layout_marginTop="10dp"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/txt_info_head"
            android:textSize="15dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textColor="@color/launch_app_bar"
            android:text="Info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_marginRight="10dp"
            android:visibility="invisible"
            android:layout_alignParentRight="true"
            android:src="@drawable/settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/launch_app_bar"
        android:layout_marginTop="16dp"
        android:layout_gravity="center"
        android:id="@+id/tv_head"
        android:text="@string/info_apply_head"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_body"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:textColor="@color/launch_app_bar"
        android:gravity="center|left"
        android:text="@string/apply_facts_info"/>
</LinearLayout>
    <RelativeLayout
        android:layout_below="@id/ll_top"
        android:background="@color/black"
        android:alpha="0.5"
        android:layout_width="match_parent"
        android:id="@+id/rl_dissmiss"
        android:layout_height="match_parent"/>
    <View
        android:layout_width="match_parent"
        android:background="@color/white_color"
        android:layout_height="2dp"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>